{
  "name": "google-card",
  "version": "1.0.0",
  "description": "A Google Nest Hub-inspired card for Home Assistant",
  "main": "google-card.js",
  "module": "google-card.js",
  "scripts": {
    "build": "rollup -c && cp dist/google-card.js ./google-card.js",
    "dev": "rollup -c --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "jest",
    "clean": "rimraf dist google-card.js",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "validate": "npm run lint && npm run test",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liamtw22/google-card.git"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "custom-card",
    "dashboard",
    "google-nest",
    "weather",
    "lit-element"
  ],
  "author": "Liam White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liamtw22/google-card/issues"
  },
  "homepage": "https://github.com/liamtw22/google-card#readme",
  "dependencies": {
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/jest": "^29.5.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-serve": "^2.0.2",
    "standard-version": "^9.5.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.js$"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
