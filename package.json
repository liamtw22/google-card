{
  "name": "google-card",
  "version": "1.0.0",
  "description": "A Google Nest Hub-inspired card for Home Assistant",
  "main": "google-card.js",
  "module": "google-card.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "clean": "rimraf google-card.js",
    "test": "echo \"No tests specified\" && exit 0",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liamtw22/google-card.git"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "custom-card",
    "dashboard",
    "google-nest",
    "weather",
    "lit-element"
  ],
  "author": "Liam White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liamtw22/google-card/issues"
  },
  "homepage": "https://github.com/liamtw22/google-card#readme",
  "dependencies": {
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-babel": "^4.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
